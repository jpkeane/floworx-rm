<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/users.css', media: 'all' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item">Users</li>
      <li class="breadcrumb-item active"><small><%= @user %></small></li>
    </ol>
  </div>
  <div class="mb-2" style="max-width: 200px;">
    <%= link_to root_path, class: "btn btn-primary" do %>
      <span class="ion ion-md-arrow-round-forward"></span>&nbsp;&nbsp;Edit Profile
    <% end %>
  </div>
</h4>

<div class="card">
  <div class="card-body">
    <table class="table user-view-table m-0">
      <tbody>
      <tr>
        <td>First Name:</td>
        <td><%= @user.first_name %></td>
      </tr>
      <tr>
        <td>Last Name:</td>
        <td><%= @user.last_name %></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><%= @user.email_address %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
