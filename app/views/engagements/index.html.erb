<% provide(:title, 'All Engagements') %>
<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item"><%= link_to 'Engagements', engagements_path %></li>
      <li class="breadcrumb-item active"><small>All Engagements</small></li>
    </ol>
  </div>
</h4>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Client</th>
    <th>Project</th>
  </tr>
  </thead>
  <tbody>
  <% @engagements.each do |engagement| %>
    <tr>
      <td scope="row"><%= link_to engagement.full_code, engagement %></td>
      <td><%= engagement %></td>
      <td><%= link_to engagement.client, engagement.client %></td>
      <td><%= link_to engagement.project, engagement.project %></td>
    </tr>
  <% end %>
  </tbody>
</table>