<% provide(:title, "#{@engagement} - #{@engagement.project} - #{@engagement.client}") %>
<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/projects.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>

  <%= javascript_include_tag 'pages_projects_item.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item"><%= link_to 'Engagements', engagements_path %></li>
      <li class="breadcrumb-item"><%= link_to @engagement.client, client_path(@engagement.client) %></li>
      <li class="breadcrumb-item"><%= link_to @engagement.project, project_path(@engagement.project) %></li>
      <li class="breadcrumb-item active"><small><%= "#{@engagement}" %></small></li>
    </ol>
  </div>
  <div class="mb-2" style="max-width: 200px;">

  </div>
</h4>

<div class="row">
  <div class="col">
    <!-- Tabs -->
    <!-- / Tabs -->
  </div>
  <div class="col-md-4 col-xl-3">
    <!-- Engagement details -->
    <div class="card mb-4">
      <h6 class="card-header">Engagement details</h6>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Name</div>
          <div><%= @engagement %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Code</div>
          <div><%= @engagement.full_code %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Client</div>
          <div><%= link_to @engagement.client, client_path(@engagement.client) %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Project</div>
          <div><%= link_to @engagement.project, client_path(@engagement.project) %></div>
        </li>
      </ul>
    </div>
    <!-- / Engagement details -->

  </div>
</div>
