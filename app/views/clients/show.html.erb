<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/projects.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>

  <%= javascript_include_tag 'pages_projects_item.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<h4 class="py-3 mb-4">
  <ol class="breadcrumb font-weight-bold m-0">
    <li class="breadcrumb-item"><%= link_to 'All Clients', clients_path %></li>
    <li class="breadcrumb-item active"><%= @client.name %></small></li>
  </ol>
</h4>

<div class="row">
  <div class="col">
    <!-- Tabs -->
    <div class="nav-tabs-top mb-4">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#client-projects">Projects</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane fade show active" id="client-projects">
          <div class="card-body">
          </div>
        </div>
      </div>
    </div>
    <!-- / Tabs -->

  </div>
  <div class="col-md-4 col-xl-3">
    <!-- Project details -->
    <div class="card mb-4">
      <h6 class="card-header">Client details</h6>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Name</div>
          <div><%= @client.name %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Code</div>
          <div><%= @client.code %></div>
        </li>
      </ul>
    </div>
    <!-- / Project details -->

  </div>
</div>
