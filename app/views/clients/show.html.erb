<% provide(:title, @client.name) %>

<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/projects.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>

  <%= javascript_include_tag 'pages_projects_item.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item"><%= link_to 'Clients', clients_path %></li>
      <li class="breadcrumb-item active"><small><%= @client.name %></small></li>
    </ol>
  </div>
  <div class="mb-2" style="max-width: 200px;">
    <%= link_to edit_client_path(@client), class: "btn btn-primary" do %>
      <span class="ion ion-md-arrow-round-forward"></span>&nbsp;&nbsp;Edit Client
    <% end %>
  </div>
</h4>

<div class="row">
  <div class="col">
    <!-- Tabs -->
    <div class="nav-tabs-top mb-4">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#client-projects">Projects</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#client-engagements">Engagements</a>
        </li>
      </ul>
      <div class="tab-content">

        <!-- Tasks -->
        <div class="tab-pane fade active show" id="client-projects">

          <div class="card-body">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Code</th>
                <th>Project Name</th>
              </tr>
              </thead>
              <tbody>
              <% @client.projects.each do |project| %>
                <tr>
                  <th scope="row"><%= link_to project.full_code, project_path(project) %></th>
                  <td><%= project.name %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="tab-pane fade" id="client-engagements">

          <div class="card-body">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Code</th>
                <th>Project Name</th>
                <th>Role</th>
              </tr>
              </thead>
              <tbody>
              <% @client.engagements.each do |engagement| %>
                <tr>
                  <th scope="row"><%= engagement.code %></th>
                  <td><%= engagement.name %></td>
                  <td><%= link_to engagement.role.name, engagement.role %></td>
                  <td><%= engagement.start_date.strftime("%d/%m/%Y") %></td>
                  <td><%= engagement.end_date.strftime("%d/%m/%Y") %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- / Tasks -->
      </div>
    </div>
    <!-- / Tabs -->

  </div>
  <div class="col-md-4 col-xl-3">
    <!-- Project details -->
    <div class="card mb-4">
      <h6 class="card-header">Client details</h6>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Name</div>
          <div><%= @client.name %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Code</div>
          <div><%= @client.code %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Projects</div>
          <div><%= @client.projects.count %></div>
        </li>
      </ul>
    </div>
    <!-- / Project details -->

  </div>
</div>
