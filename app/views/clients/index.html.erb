<% provide(:title, 'All Clients') %>
<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item"><%= link_to 'Clients', clients_path %></li>
      <li class="breadcrumb-item active"><small>All Clients</small></li>
    </ol>
  </div>
  <div class="mb-2" style="max-width: 200px;">
    <%= link_to new_client_path, class: "btn btn-primary" do %>
      <span class="ion ion-md-add-circle"></span>&nbsp;&nbsp;New Client
    <% end %>
  </div>
</h4>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Code</th>
    <th>Client Name</th>
    <th>Projects</th>
  </tr>
  </thead>
  <tbody>
  <% @clients.each do |client| %>
    <tr>
      <th scope="row"><%= link_to client.code, client_path(client) %></th>
      <td><%= client.name %></td>
      <td><%= client.projects.count %></td>
    </tr>
  <% end %>
  </tbody>
</table>