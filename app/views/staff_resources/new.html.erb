<% provide(:title, "New Staff Resource") %>
<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <ol class="breadcrumb font-weight-bold m-0">
    <li class="breadcrumb-item"><%= link_to 'Staff Resources', staff_resources_path %></li>
    <li class="breadcrumb-item active"><small>New Staff Resource</small></li>
  </ol>
</h4>

<%= form_for @staff_resource do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="card mb-4">
    <h6 class="card-header">
      Basic Information
    </h6>
    <div class="card-body">
      <div class="form-group row">
        <%= f.label :first_name, class: 'col-form-label col-sm-2 text-sm-right' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name'  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, class: 'col-form-label col-sm-2 text-sm-right' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email_address, class: 'col-form-label col-sm-2 text-sm-right' %>
        <div class="col-sm-10">
          <%= f.text_field :email_address, class: 'form-control', placeholder: 'Email Address'  %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <h6 class="card-header">
      Client
    </h6>
    <div class="card-body">
      <div class="form-group row">
        <%= f.label :grade_id, class: 'col-form-label col-sm-2 text-sm-right' %>
        <div class="col-sm-10">
          <%= f.collection_select :grade_id, Grade.order(:level), :id, :name, { include_blank: true }, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 ml-sm-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', staff_resources_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
