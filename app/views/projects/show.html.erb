<% provide(:title, "#{@project.client.name} - #{@project.name}") %>
<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/projects.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>

  <%= javascript_include_tag 'pages_projects_item.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item"><%= link_to 'Projects', projects_path %></li>
      <li class="breadcrumb-item active"><small><%= "#{@project.client.name} - #{@project.name}" %></small></li>
    </ol>
  </div>
  <div class="mb-2" style="max-width: 200px;">
    <%= link_to edit_project_path(@project), class: "btn btn-primary" do %>
      <span class="ion ion-md-arrow-round-forward"></span>&nbsp;&nbsp;Edit Project
    <% end %>
  </div>
</h4>

<div class="row">
  <div class="col">
  </div>
  <div class="col-md-4 col-xl-3">
    <!-- Project details -->
    <div class="card mb-4">
      <h6 class="card-header">Project details</h6>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Client</div>
          <div><%= link_to @project.client.name, client_path(@project.client) %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Name</div>
          <div><%= @project.name %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Code</div>
          <div><%= @project.full_code %></div>
        </li>
      </ul>
    </div>
    <!-- / Project details -->

  </div>
</div>
