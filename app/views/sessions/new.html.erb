<% provide(:title, 'Login') %>

<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/authentication.css', media: 'all' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<div class="authentication-wrapper authentication-3">
  <div class="authentication-inner">

    <!-- Side container -->
    <!-- Do not display the container on extra small, small and medium screens -->
    <div class="d-none d-lg-flex col-lg-8 align-items-center ui-bg-cover ui-bg-overlay-container p-5" style="background-image: url('/img/bg/21.jpg');">
      <div class="ui-bg-overlay bg-dark opacity-50"></div>

      <!-- Text -->
      <div class="w-100 text-white px-5">
        <h1 class="display-2 font-weight-bolder mb-4">Floworx</h1>
        <div class="text-large font-weight-light">
          Login to your Floworx account to access your dashboard and reports
        </div>
      </div>
      <!-- /.Text -->
    </div>
    <!-- / Side container -->

    <!-- Form container -->
    <div class="d-flex col-lg-4 align-items-center bg-white p-5">
      <!-- Inner container -->
      <!-- Have to add `.d-flex` to control width via `.col-*` classes -->
      <div class="d-flex col-sm-7 col-md-5 col-lg-12 px-0 px-xl-4 mx-auto">
        <div class="w-100">

          <h4 class="text-center text-lighter font-weight-normal mt-5 mb-0">Login to Floworx</h4>

          <div class="login-flash">
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %> alert-dismissible fade show"><%= message %></div>
            <% end %>
          </div>

          <%= form_for(:session, url: login_path, html: { class: 'my-5' }) do |f| %>
            <div class="form-group">
              <%= f.label :email_address, class: 'form-label' %>
              <%= f.email_field :email_address, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="d-flex justify-content-between align-items-center m-0">
              <%= f.label :remember_me, class: 'custom-control custom-checkbox m-0' do %>
                <%= f.check_box :remember_me, class: 'custom-control-input' %>
                <span class="custom-control-label">Remember me</span>
              <% end %>
              <%= f.submit 'Log in', class: 'btn btn-primary' %>
            </div>



          <% end %>
        </div>
      </div>
    </div>
    <!-- / Form container -->

  </div>
</div>
