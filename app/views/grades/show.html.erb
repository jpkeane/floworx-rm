<% provide(:title, @grade.name) %>

<% content_for :styles do %>
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/projects.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>

  <%= javascript_include_tag 'pages_projects_item.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<h4 class="d-flex flex-wrap justify-content-between align-items-center font-weight-bold pt-2 mb-4">
  <div class="mb-2">
    <ol class="breadcrumb font-weight-bold m-0">
      <li class="breadcrumb-item"><%= link_to 'Grades', grades_path %></li>
      <li class="breadcrumb-item active"><small><%= @grade.name %></small></li>
    </ol>
  </div>
  <div class="mb-2" style="max-width: 200px;">
    <%= link_to edit_grade_path(@grade), class: "btn btn-primary" do %>
      <span class="ion ion-md-arrow-round-forward"></span>&nbsp;&nbsp;Edit Grade
    <% end %>
  </div>
</h4>

<div class="row">
  <div class="col">

  </div>

  <div class="col-md-4 col-xl-3">
    <!-- Details -->
    <div class="card mb-4">
      <h6 class="card-header">Grade details</h6>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Name</div>
          <div><%= @grade.name %></div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="text-muted">Level</div>
          <div><%= @grade.level %></div>
        </li>
      </ul>
    </div>
    <!-- / Details -->
  </div>
</div>
